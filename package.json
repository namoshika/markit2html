{
    "name": "markit2html",
    "version": "1.0.0",
    "description": "Save Markdown as HTML(Standalone)",
    "main": "out/index.js",
    "types": "out/index.d.js",
    "bin": "out/bin/cli.js",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "jest"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "author": "namoshika",
    "license": "MIT",
    "dependencies": {
        "commander": "^2.15.1",
        "find-up": "^2.1.0",
        "fs-extra": "^5.0.0",
        "highlight.js": "^9.12.0",
        "markdown-it": "^8.4.1",
        "posthtml": "^0.11.3",
        "posthtml-inline-assets": "^2.0.0"
    },
    "devDependencies": {
        "@types/commander": "^2.12.2",
        "@types/find-up": "^2.1.1",
        "@types/fs-extra": "^5.0.1",
        "@types/highlight.js": "^9.12.2",
        "@types/jest": "^22.2.3",
        "@types/markdown-it": "^0.0.4",
        "@types/node": "^9.4.7",
        "jest": "^22.4.3",
        "markdown-it-emoji": "^1.4.0",
        "ts-jest": "^22.4.2",
        "typescript": "^2.7.2"
    }
}
